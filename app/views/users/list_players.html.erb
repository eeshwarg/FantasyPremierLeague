<h1>Listing players</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Issuspended</th>
    <th>Rating</th>
    <th>Age</th>
    <th>Value</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Cleansheets</th>
    <th>Saves</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% players.each do |player| %>
      <tr>
        <td><%= player.full_name %></td>
        <td><%= player.position %></td>
        <td><%= player.isSuspended %></td>
        <td><%= player.rating %></td>
        <td><%= player.age %></td>
        <td><%= player.value %></td>
        <td><%= player.goals %></td>
        <td><%= player.assists %></td>
        <td><%= player.cleanSheets %></td>
        <td><%= player.saves %></td>
        <% team = Team.find(player.team_id) %>
        <td><%= team.name %></td>
        <td><%= link_to 'Sell', sell_player_path(:player_id => player.id) %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

