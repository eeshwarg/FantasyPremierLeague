<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;

}
.s {
  text-align: center;
}

tr:nth-child(even){background-color: #f2f2f2}
tr:hover {background-color: #bcf1f2}
</style>
 class="s"
<h1>Listing goals</h1>

<table>
  <thead>
    <tr>
      <th class="s">Game</th>
      <th class="s">Gtime</th>
      <th class="s">Player</th>
      <th class="s"></th>
      <th class="s"></th>
      <th class="s"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td class="s"><%= goal.game_id %></td>
        <td class="s"><%= goal.gTime %></td>
        <td class="s"><%= goal.player_id %></td>
        <td class="s"><%= link_to 'Show', goal %></td>
        <td class="s"><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td class="s"><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

