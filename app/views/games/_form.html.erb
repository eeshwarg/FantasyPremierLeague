<%= form_for(@game, remote: true) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date%>
  </div>
  <div class="field">
    <%= f.label :aTeam_id %><br>
    <%= f.collection_select :aTeam_id, Team.all, :id, :name, :prompt => 'Select home team' %>
  </div>
  <div class="field">
    <%= f.label :bTeam_id %><br>
    <%= f.collection_select :bTeam_id, Team.all, :id, :name, :prompt => 'Select away team' %>
  </div>
  <div class="field">
    <%= f.label :aScore %><br>
    <%= f.number_field :aScore %>
  </div>
  <div class="field">
    <%= f.label :bScore %><br>
    <%= f.number_field :bScore %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
