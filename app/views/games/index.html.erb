<h1>Listing games</h1>

<table id="games_table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Ateam</th>
      <th>Bteam</th>
      <th>Ascore</th>
      <th>Bscore</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= Team.find(game.aTeam).name %></td>
        <td><%= Team.find(game.bTeam).name %></td>
        <td><%= game.aScore %></td>
        <td><%= game.bScore %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

