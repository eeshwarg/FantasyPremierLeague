<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;

}
.s {
  text-align: center;
}

tr:nth-child(even){background-color: #f2f2f2}
tr:hover {background-color: #bcf1f2}
</style>
<h1>Listing assists</h1>

<table>
  <thead>
    <tr>
      <th class="s">Game</th>
      <th class="s">Atime</th>
      <th class="s">Player</th>
      <th class="s"></th>
      <th class="s"></th>
      <th class="s"></th>
    </tr>
  </thead>

  <tbody>
    <% @assists.each do |assist| %>
      <tr>
        <td class="s"><%= assist.game %></td>
        <td class="s"><%= assist.aTime %></td>
        <td class="s"><%= assist.player %></td>
        <td class="s"><%= link_to 'Show', assist %></td>
        <td class="s"><%= link_to 'Edit', edit_assist_path(assist) %></td>
        <td class="s"><%= link_to 'Destroy', assist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assist', new_assist_path %>
