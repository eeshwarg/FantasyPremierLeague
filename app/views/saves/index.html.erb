<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;

}
.s {
  text-align: center;
}

tr:nth-child(even){background-color: #f2f2f2}
tr:hover {background-color: #bcf1f2}
</style>

<h1>Listing saves</h1>

<table>
  <thead>
    <tr>
      <th class="s">Game</th>
      <th class="s">Stime</th>
      <th class="s">Player</th>
      <th class="s"></th>
      <th class="s"></th>
      <th class="s"></th>
    </tr>
  </thead>

  <tbody>
    <% @saves.each do |safe| %>
      <tr>
        <td class="s"><%= safe.game %></td>
        <td class="s"><%= safe.sTime %></td>
        <td class="s"><%= safe.player %></td>
        <td class="s"><%= link_to 'Show', safe %></td>
        <td class="s"><%= link_to 'Edit', edit_safe_path(safe) %></td>
        <td class="s"><%= link_to 'Destroy', safe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Safe', new_safe_path %>
